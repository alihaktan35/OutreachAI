# OutreachAI Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# SIMPLE n8n DEMO - REQUIRED VARIABLES
# ============================================

# Google Gemini AI API Key (for email personalization)
# Get it from: https://makersuite.google.com/app/apikey
GOOGLE_AI_API_KEY=your_gemini_api_key_here

# ============================================
# EMAIL PROVIDER - Choose ONE:
# ============================================

# OPTION 1: Gmail SMTP (Recommended for Demo - Easy Setup)
# Get App Password from: https://myaccount.google.com/apppasswords
GMAIL_USER=your-gmail@gmail.com
GMAIL_APP_PASSWORD=abcd efgh ijkl mnop

# OPTION 2: SendGrid API (Professional - Better Deliverability)
# Get it from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=your-verified-email@example.com
SENDGRID_FROM_NAME=Your Name or Company
SENDGRID_REPLY_TO=your-reply-email@example.com

# n8n Local Instance URL (default for Docker)
N8N_WEBHOOK_URL=http://localhost:5678/webhook/simple-email-campaign

# ============================================
# OPTIONAL - Advanced Features
# ============================================

# n8n Webhook URLs (for full integration)
N8N_WEBHOOK_LAUNCH_CAMPAIGN=https://your-n8n-instance.com/webhook/launch-campaign
N8N_WEBHOOK_CHECK_STATUS=https://your-n8n-instance.com/webhook/campaign-status
N8N_WEBHOOK_PREVIEW_EMAIL=https://your-n8n-instance.com/webhook/preview-email

# Apollo.io API (for lead generation)
APOLLO_API_KEY=your_apollo_api_key_here

# Application Settings
APP_ENV=development
APP_DEBUG=true

# Optional: CRM Integration
HUBSPOT_API_KEY=your_hubspot_api_key_here
PIPEDRIVE_API_KEY=your_pipedrive_api_key_here

# Firebase Configuration
# Get these from your Firebase project settings
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
FIREBASE_APP_ID=your_firebase_app_id
FIREBASE_MEASUREMENT_ID=your_measurement_id
